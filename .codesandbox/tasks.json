{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "command": "npm i pnpm -g",
      "name": "install pnpm"
    },
    {
      "command": "pnpm install:client",
      "name": "install:client"
    },
    {
        "command": "cd backend && pnpm run start:dev",
        "name": "start backend"
    },
    {
        "command": "cd frontend && pnpm run start:dev",
        "name": "start frontend"
    }
  ]
}
